---
import Panel from "./Panel.astro";
import {
    ANOTHER_AVATAR,
    ANOTHER_AVATAR_QUALITY,
    ANOTHER_DESCRIPTION,
    ANOTHER_IDENTITY,
    ANOTHER_NAME,
    ANOTHER_PRONOUNS,
    ANOTHER_LOCATION,
    ANOTHER_TIMEZONE,
    SOCIAL_LINKS
} from "../consts.ts";

import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';
interface Props extends HTMLAttributes<'div'> {}
const { class: className, ...props } = Astro.props;
---

<Panel class:list={[
    "flex flex-col items-center p-8",
    className,
]}>
    {/* Avatar */}
    <div class="relative mb-5 group cursor-pointer">
        <Image
                src={ANOTHER_AVATAR}
                alt={ANOTHER_NAME}
                width={128}
                height={128}
                class:list={[
                    "h-32 w-32 rounded-full shadow-md object-cover",
                    "border border-white/30 dark:border-white/10",
                    "group-hover:scale-105 transition-transform duration-300 ease-out"
                ]}
                loading="lazy"
                decoding="async"
                format="webp"
                quality={ANOTHER_AVATAR_QUALITY}
        />
    </div>

    {/* Text Info */}
    <div class="text-center w-full space-y-5">

        {/* Header: Name, ID, Pronouns */}
        <div class="space-y-1">
            <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100">
                {ANOTHER_NAME}
            </h2>
            <div class="flex items-center justify-center gap-2 text-sm text-zinc-500 dark:text-zinc-400">
                {ANOTHER_IDENTITY && (
                        <span class="font-medium tracking-wide">{ANOTHER_IDENTITY}</span>
                )}

                {ANOTHER_IDENTITY && ANOTHER_PRONOUNS && (
                        <span class="text-zinc-300 dark:text-zinc-600">â€¢</span>
                )}

                {ANOTHER_PRONOUNS && (
                        <span class="italic opacity-80">{ANOTHER_PRONOUNS}</span>
                )}
            </div>
        </div>

        {/* Divider */}
        <div class="w-full h-px bg-zinc-200 dark:bg-white/10"></div>

        {/* Meta Info: Location & Time (Grid Layout for Perfect Alignment) */}
        {(ANOTHER_LOCATION || ANOTHER_TIMEZONE) && (
                <div class="w-fit mx-auto grid grid-cols-[24px_1fr] gap-x-2 gap-y-2 text-sm text-zinc-600 dark:text-zinc-400 text-left">

                    {/* Location Row */}
                    {ANOTHER_LOCATION && (
                            <>
                                <div class="flex items-center justify-center">
                                    <i class="fa-solid fa-location-dot opacity-70"></i>
                                </div>
                                <div class="truncate">
                                    {ANOTHER_LOCATION}
                                </div>
                            </>
                    )}

                    {/* Time Row */}
                    {ANOTHER_TIMEZONE && (
                            <>
                                <div class="flex items-center justify-center">
                                    <i class="fa-solid fa-clock opacity-70"></i>
                                </div>
                                <div id="local-time" data-timezone={ANOTHER_TIMEZONE} class="tabular-nums">
                                    --:-- <span class="text-xs opacity-60 ml-1">UTC--:--</span>
                                </div>
                            </>
                    )}
                </div>
        )}

        {/* Description */}
        { ANOTHER_DESCRIPTION && (
                <div class="pt-2 border-t border-transparent">
                    <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed text-center max-w-[90%] mx-auto">
                        {ANOTHER_DESCRIPTION}
                    </p>
                </div>
        )}

        {/* Social Links */}
        {SOCIAL_LINKS && SOCIAL_LINKS.length > 0 && (
                <>
                    <div class="w-full h-px bg-zinc-200 dark:bg-white/10"></div>
                    <div class="flex flex-wrap justify-center gap-3">
                        {SOCIAL_LINKS.map(link => (
                                <a
                                        href={link.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        aria-label={link.label}
                                        class="group/icon flex items-center justify-center w-10 h-10 rounded-full
                                               bg-zinc-100 dark:bg-white/5
                                               text-zinc-500 dark:text-zinc-400
                                               hover:bg-blue-100 dark:hover:bg-blue-900/30
                                               hover:text-blue-600 dark:hover:text-blue-400
                                               hover:scale-110
                                               transition-all duration-300 ease-out"
                                        title={link.label}
                                >
                                    <i class={`${link.icon} text-lg transition-transform group-hover/icon:rotate-6`}></i>
                                </a>
                        ))}
                    </div>
                </>
        )}
    </div>
</Panel>

<script>
    function updateTime() {
        const timeElement = document.getElementById('local-time');
        if (!timeElement) return;

        const timezone = timeElement.getAttribute('data-timezone');
        if (!timezone) return;

        try {
            const now = new Date();
            const formatter = new Intl.DateTimeFormat('en-US', {
                timeZone: timezone,
                hour: '2-digit',
                minute: '2-digit',
                hour12: false,
                timeZoneName: 'longOffset'
            });

            const parts = formatter.formatToParts(now);
            const hour = parts.find(p => p.type === 'hour')?.value;
            const minute = parts.find(p => p.type === 'minute')?.value;
            const timeZoneName = parts.find(p => p.type === 'timeZoneName')?.value; // "GMT+08:00"

            if (hour && minute && timeZoneName) {
                const utcOffset = timeZoneName.replace('GMT', 'UTC');
                timeElement.innerHTML = `${hour}:${minute} <span class="text-xs opacity-60 ml-1">${utcOffset}</span>`;
            }

        } catch (e) {
            console.error("Invalid Timezone:", timezone);
            timeElement.textContent = "Time Error";
        }
    }

    updateTime();
    setInterval(updateTime, 1000);

    document.addEventListener('astro:page-load', () => {
        updateTime();
    });
</script>
