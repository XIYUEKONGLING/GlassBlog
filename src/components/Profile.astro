---
import Panel from "./Panel.astro";
import {
    ANOTHER_AVATAR,
    ANOTHER_AVATAR_QUALITY,
    ANOTHER_DESCRIPTION,
    ANOTHER_IDENTITY,
    ANOTHER_NAME,
    ANOTHER_PRONOUNS,
    ANOTHER_LOCATION,
    ANOTHER_TIMEZONE
} from "../consts.ts";

import type { HTMLAttributes } from 'astro/types';
import Image from "astro/components/Image.astro";
interface Props extends HTMLAttributes<'div'> {}
const { class: className, ...props } = Astro.props;
---

<Panel class:list={[
    "flex flex-col items-center p-8",
    className,
]}>
    {/* Avatar */}
    <div class="relative mb-4 group cursor-pointer">
        <Image
                src={ANOTHER_AVATAR}
                alt={ANOTHER_NAME}
                width={128}
                height={128}
                class:list={[
                    "h-32 w-32 rounded-full shadow-md object-cover",
                    "border border-white/30 dark:border-white/10",
                    "group-hover:scale-105 transition-transform duration-300 ease-out"
                ]}
                loading="lazy"
                decoding="async"
                format="webp"
                quality={ANOTHER_AVATAR_QUALITY}
        />
    </div>

    {/* Text Info */}
    <div class="text-center w-full space-y-4">

        {/* Header: Name, ID, Pronouns */}
        <div>
            <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100">
                {ANOTHER_NAME}
            </h2>
            <div class="flex items-center justify-center gap-2 text-sm text-zinc-500 dark:text-zinc-400 mt-0.5">
                {ANOTHER_IDENTITY && (
                        <span class="font-medium">{ANOTHER_IDENTITY}</span>
                )}

                {ANOTHER_IDENTITY && ANOTHER_PRONOUNS && (
                        <span class="text-zinc-300 dark:text-zinc-600">â€¢</span>
                )}

                {ANOTHER_PRONOUNS && (
                        <span class="italic opacity-80">{ANOTHER_PRONOUNS}</span>
                )}
            </div>
        </div>

        {/* Divider */}
        <div class="w-full h-px bg-zinc-200 dark:bg-white/10"></div>

        {/* Meta Info: Location & Time */}
        <div class="grid gap-2 text-sm text-zinc-600 dark:text-zinc-400">
            {ANOTHER_LOCATION && (
                    <div class="flex items-center justify-center gap-2" title="Location">
                        <i class="fa-solid fa-location-dot w-4 text-center opacity-70"></i>
                        <span>{ANOTHER_LOCATION}</span>
                    </div>
            )}

            {ANOTHER_TIMEZONE && (
                    <div class="flex items-center justify-center gap-2" title={`Timezone: ${ANOTHER_TIMEZONE}`}>
                        <i class="fa-solid fa-clock w-4 text-center opacity-70"></i>
                        <span id="local-time" data-timezone={ANOTHER_TIMEZONE}>
                        --:--
                    </span>
                    </div>
            )}
        </div>

        {/* Description */}
        { ANOTHER_DESCRIPTION && (
                <div class="pt-2">
                    <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed text-justify px-2">
                        {ANOTHER_DESCRIPTION}
                    </p>
                </div>
        )}
    </div>
</Panel>

<script>
    function updateTime() {
        const timeElement = document.getElementById('local-time');
        if (!timeElement) return;

        const timezone = timeElement.getAttribute('data-timezone');
        if (!timezone) return;

        try {
            const now = new Date();
            const options: Intl.DateTimeFormatOptions = {
                timeZone: timezone,
                hour: '2-digit',
                minute: '2-digit',
                // second: '2-digit',
                hour12: false
            };

            const timeString = new Intl.DateTimeFormat('en-US', options).format(now);

            timeElement.textContent = `${timeString} (Local)`;

        } catch (e) {
            console.error("Invalid Timezone:", timezone);
            timeElement.textContent = "Timezone Error";
        }
    }

    updateTime();
    setInterval(updateTime, 1000);

    document.addEventListener('astro:page-load', () => {
        updateTime();
    });
</script>
