---
import type { Project } from '../consts';
import Panel from './Panel.astro';
import { Image } from 'astro:assets';

interface Props {
    project: Project;
}

const { project } = Astro.props;
---

<a href={project.url} target="_blank" rel="noopener noreferrer" class="group block no-underline">
    <Panel class="h-full transition-all duration-300 group-hover:scale-[1.02] group-hover:border-blue-500/50 group-hover:shadow-blue-500/10 p-6! flex items-start gap-5">

        <!-- Logo Container -->
        <div class="shrink-0 w-14 h-14 rounded-2xl flex items-center justify-center overflow-hidden bg-zinc-100 dark:bg-white/5 border border-zinc-200 dark:border-white/10 group-hover:border-blue-400/50 transition-colors">
            {project.logo.type === 'icon' && (
                    <i class:list={[project.logo.value, "text-2xl text-zinc-600 dark:text-zinc-300 group-hover:text-blue-500 transition-colors"]}></i>
            )}

            {project.logo.type === 'text' && (
                    <span class="text-xl font-bold text-zinc-600 dark:text-zinc-300 group-hover:text-blue-500 transition-colors">
          {project.logo.value}
        </span>
            )}

            {project.logo.type === 'image' && (
                    <img src={project.logo.value} alt={project.title} class="w-full h-full object-cover" />
            )}
        </div>

        <!-- Content -->
        <div class="grow min-w-0">
            <h3 class="text-lg font-bold text-zinc-800 dark:text-zinc-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-1 truncate">
                {project.title}
            </h3>
            {project.description && (
                    <p class="text-sm text-zinc-500 dark:text-zinc-400 line-clamp-2 leading-relaxed">
                        {project.description}
                    </p>
            )}
        </div>

        <!-- Arrow Icon -->
        <div class="shrink-0 self-center opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all">
            <i class="fa-solid fa-arrow-up-right-from-square text-xs text-blue-500"></i>
        </div>
    </Panel>
</a>
