---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-6 z-50 w-full px-4 pointer-events-none">
	<nav
		id="nav-container"
		class="group pointer-events-auto mx-auto flex w-full max-w-[80%] flex-wrap items-center justify-between 
               rounded-full bg-black/40 px-6 py-3 h-20
               shadow-lg shadow-zinc-800/10 backdrop-blur-[20px]
               transition-all duration-300 ease-in-out
               backdrop-saturate-150
               
               data-[state=open]:bg-black/80 data-[state=open]:rounded-2xl"
	>
		<div class="flex items-center px-5">
			<h2 class="text-lg font-bold tracking-tight text-amber-50">
				<a href="/" class="hover:text-blue-400 transition-colors decoration-transparent">
					{SITE_TITLE}
				</a>
			</h2>
		</div>

		<button id="menu-btn" class="block md:hidden text-amber-50 focus:outline-none transition-transform active:scale-90">
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
		</button>

		<div class="hidden md:flex gap-6 text-sm font-medium text-gray-200 px-5">
			<HeaderLink href="/" class="hover:text-blue-400 transition-colors">Home</HeaderLink>
			<HeaderLink href="/blog" class="hover:text-blue-400 transition-colors">Blog</HeaderLink>
			<HeaderLink href="/about" class="hover:text-blue-400 transition-colors">About</HeaderLink>
		</div>
	</nav>
</header>
